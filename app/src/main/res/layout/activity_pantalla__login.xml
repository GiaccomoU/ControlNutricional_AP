<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81e2a6"
    xmlns:xlmns="http://schemas.android.com/apk/res/android"
    tools:context="com.example.giaccomo.controlnutricional.Pantalla_Login">

    <EditText
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/TxtFldCorreo"
        android:textIsSelectable="true"
        android:textColor="#4e4e4e"
        android:layout_above="@+id/TxtFldContrasenia"
        android:layout_centerHorizontal="true"
        android:hint="Ingresa tu email" />

    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/TxtFldContrasenia"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/TxtFldCorreo"
        android:hint="Ingresa tu contraseÃ±a" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/TxtFldContrasenia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="#5f9171"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:text="@string/iniciar_sesion"
        android:onClick="login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/registrarse"
        android:id="@+id/textView"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="registrarse" />



</RelativeLayout>